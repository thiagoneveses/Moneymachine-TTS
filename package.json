{
  "name": "TTS-Translator-Moneymachine",
  "version": "1.0.0",
  "description": "Text to Speech Translator Desktop App",
  "author": "Thiago Neves",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagoneveses/Moneymachine-TTS.git"
  },
  "build": {
    "publish": [{
      "provider": "github",
      "owner": "thiagoneveses",
      "repo": "Moneymachine-TTS"
    }],
    "appId": "com.tts.translator",
    "productName": "TTS Translator Desktop",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}